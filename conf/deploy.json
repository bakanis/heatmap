{
    "packages":{
        "live-dashboard":{
            "type":"executable-jar-webapp",
            "data":{
                "port":"9000",
                "bucket":"ophan-dist",
                "healthcheck_paths":[
                    "/health-check"
                ]
            }
        }
    },
    "recipes":{
        "default":{
            "depends" : ["artifactUploadOnly", "deployOnly"]
        },
        "deployOnly":{
            "actionsPerHost": ["live-dashboard.deploy"]
        },
        "artifactUploadOnly":{
            "actionsBeforeApp": ["live-dashboard.uploadArtifacts"]
        }
    }
}